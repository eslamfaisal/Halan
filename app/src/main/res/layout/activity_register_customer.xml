<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drawme="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ic_login_background_shap"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/registertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:context=".activities.RegisterActivity">

        <android.support.v7.widget.CardView
            android:layout_margin="16dp"
            app:cardElevation="4dp"
            drawme:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="36dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:text="@string/register"
                    android:padding="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ic_edit_text_background_shape">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_icon_background_shape"
                        android:padding="8dp"
                        android:src="@drawable/ic_account_circle_black_24dp" />


                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/white"
                        android:gravity="start"
                        android:hint="@string/name"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textAlignment="viewStart" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_edit_text_background_shape">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_icon_background_shape"
                        android:padding="8dp"
                        android:src="@drawable/ic_email_blue" />


                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/white"

                        android:gravity="start"
                        android:hint="@string/email"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textAlignment="viewStart" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/ic_edit_text_background_shape">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_icon_background_shape"
                        android:padding="8dp"
                        android:src="@drawable/ic_key" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"

                        android:background="@color/white"
                        android:gravity="start"
                        android:hint="@string/password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textAlignment="viewStart" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/ic_edit_text_background_shape">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_icon_background_shape"
                        android:padding="8dp"
                        android:src="@drawable/ic_call_black_24dp" />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/white"
                        android:gravity="start"
                        android:hint="@string/phone"

                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textAlignment="viewStart" />

                </LinearLayout>

                <com.rafakob.drawme.DrawMeButton
                    android:textSize="22dp"
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="36dp"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    drawme:dm_backColor="@color/colorPrimary"
                    drawme:dm_backColorDisabled="@color/colorPrimary"
                    drawme:dm_backColorPressed="@color/green"
                    drawme:dm_radius="16dp" />



            </LinearLayout>

        </android.support.v7.widget.CardView>


    </ScrollView>
</RelativeLayout>
